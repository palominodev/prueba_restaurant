---
import Horario from "./Horario.astro";
import Ubicacion from "./Ubicacion.astro";
---

<footer class="px-4 sm:px-6 md:px-8 lg:px-16 py-8 bg-amber-500 text-white">
  <div class="container mx-auto">
    <h2 class="text-2xl md:text-3xl lg:text-4xl font-bold text-center mb-6 lg:mb-8">Horario y Ubicación</h2>
    
    <section class="grid grid-cols-1 md:grid-cols-2 gap-6 md:gap-8">
      <!-- Contenedor para el componente de Horario -->
      <div class="bg-amber-600 bg-opacity-30 rounded-lg p-4 md:p-6 backdrop-blur-sm">
        <Horario />
      </div>
      
      <!-- Contenedor para el componente de Ubicación -->
      <div class="bg-amber-600 bg-opacity-30 rounded-lg p-4 md:p-6 backdrop-blur-sm">
        <Ubicacion />
      </div>
    </section>
    
    <!-- Información adicional del footer -->
    <div class="mt-8 pt-6 border-t border-amber-400 border-opacity-50">
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 mb-6">
        <!-- Columna 1: Contacto -->
        <div>
          <h3 class="text-lg font-semibold mb-3">Contacto</h3>
          <ul class="space-y-2">
            <li class="flex items-start">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
              </svg>
              <span>(01) 234-5678</span>
            </li>
            <li class="flex items-start">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
              <span>info@elbuensabor.pe</span>
            </li>
          </ul>
        </div>
        
        <!-- Columna 2: Enlaces rápidos -->
        <div>
          <h3 class="text-lg font-semibold mb-3">Enlaces rápidos</h3>
          <ul class="space-y-2">
            <li><a href="/menu" class="hover:underline">Menú completo</a></li>
            <li><a href="/reservas" class="hover:underline">Reserva online</a></li>
            <li><a href="/delivery" class="hover:underline">Delivery</a></li>
          </ul>
        </div>
        
        <!-- Columna 3: Legal -->
        <div>
          <h3 class="text-lg font-semibold mb-3">Legal</h3>
          <ul class="space-y-2">
            <li><a href="/privacidad" class="hover:underline">Política de privacidad</a></li>
            <li><a href="/terminos" class="hover:underline">Términos y condiciones</a></li>
          </ul>
        </div>
        
        <!-- Columna 4: Redes sociales -->
